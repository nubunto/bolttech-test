{
  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs",                           
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true,                                 
    "noImplicitAny": true,                       
    "esModuleInterop": true,                        

    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  },
  "exclude": [
    "tests/"
  ]
}
